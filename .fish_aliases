# gradle
# alias gd=./gradlew
alias tom './gradlew :site:deployToBuild; and ./gradlew startLocalTomcat'
function gd
  set old_cwd $PWD
  set cwd $PWD
  while true
    if test -e "$cwd/gradlew"
      break
    else
      set cwd (dirname "$cwd")
    end
  end
  # set cmd "$cwd/gradlew" $argv
  # eval $cmd
  cd $cwd
  ./gradlew $argv
  cd $old_cwd
end

